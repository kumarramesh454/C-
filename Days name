
int main() {
      int number;
   
   printf("Enter the value: ");
   scanf("%d",&number);
  
   switch(number){
       case 1:
       printf("Today is monday");
       break;
       
       case 2:
       printf("Today is tuesday");
       break;
       
       case 3:
       printf("Today is wednesday");
       break;
       
       case 4:
       printf("Today is thursday");
       break;
       
       case 5:
       printf("Today is friday");
       break;
       
       case 6:
       printf("Today is sturday");
       break;
       
       case 7:
       printf("Today is sunday");
       break;
       
       default:
       printf("OOPS:you entered something wrong");
   }
    
    return 0;
}
